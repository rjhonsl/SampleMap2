<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/accent_material_light">

        <TextView
        android:text="Settings"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:id="@+id/txt_settings_title"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:textColor="@color/background_material_light"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#328d90"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_white_box_curvebottom">
            <TextView
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="25dp"
                android:textStyle="bold"
                android:textColor="#00665a"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CUSTOMER SETTINGS"
                />

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="17dp"
                    android:textSize="18sp"
                    android:textColor="#a3002a24"
                    android:textStyle="normal"
                    android:id="@+id/txt_settings_customerInfo"
                    android:background="@drawable/bg_white_box_noshadow"
                    android:drawableLeft="@drawable/ic_people_darkteal_24dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="    Customer Information"
                    />

                <TextView
                    android:padding="17dp"
                    android:textSize="18sp"
                    android:background="@drawable/bg_white_box_noshadow"
                    android:drawableLeft="@drawable/ic_event_darkteal_24dp"
                    android:id="@+id/txt_settings_customerActivity"
                    android:textColor="#a3002a24"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="    Customer Activity"
                    />

                <TextView
                    android:padding="17dp"
                    android:textSize="18sp"
                    android:textColor="#a3002a24"
                    android:id="@+id/txt_settings_customerMonitoring"
                    android:background="@drawable/bg_white_box_noshadow"
                    android:drawableLeft="@drawable/ic_info_outline_darkteal_24dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="    Customer Monitoring"
                    />

            </LinearLayout> </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_white_box_curvebottom">
                <TextView
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="25dp"
                    android:textStyle="bold"
                    android:textColor="#00665a"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="OTHER SETTINGS"

                    />

                <LinearLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="17dp"
                        android:textSize="18sp"
                        android:textColor="#a3002a24"
                        android:textStyle="normal"
                        android:id="@+id/txt_settings_changelog"
                        android:background="@drawable/bg_white_box_noshadow"
                        android:drawableLeft="@drawable/ic_code_darkteal_24dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="    Change Logs"
                        />

                    <TextView
                        android:padding="17dp"
                        android:textSize="18sp"
                        android:textColor="#a3002a24"
                        android:textStyle="normal"
                        android:id="@+id/txt_settings_about"
                        android:background="@drawable/bg_white_box_noshadow"
                        android:drawableLeft="@drawable/ic_phone_android_darkteal_24dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="    About"
                        />

                </LinearLayout> </LinearLayout>




        </LinearLayout>
    </ScrollView>


</LinearLayout>