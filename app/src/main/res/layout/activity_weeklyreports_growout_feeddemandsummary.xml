<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:background="@color/accent_material_light"
        android:gravity="center">

        <TextView
            android:text="Weekly Demands"
            android:maxLines="15"
            android:scrollbars="vertical"
            android:layout_marginLeft="0dp"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:paddingLeft="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/titlebar_header"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/background_material_light"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="#efefef"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:id="@+id/lbl_weeklyreports_grow_out_summary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Farm Name2"/>


    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content">

        <ListView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/lv_growout_feedconsumption_summary"
            >


        </ListView>


    </LinearLayout>


</LinearLayout>