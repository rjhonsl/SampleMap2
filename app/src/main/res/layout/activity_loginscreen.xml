<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
             android:layout_gravity="center"
             android:foregroundGravity="center"
  >

    <!--<ImageView android:layout_width="wrap_content"-->
               <!--android:layout_height="wrap_content"-->
               <!--android:scaleType="centerCrop"-->
               <!--android:src="@drawable/fishes"-->
        <!--/>-->
    <LinearLayout android:layout_width="fill_parent"
                  android:background="#039be5"
                  android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_weight="1"
            >



            <RelativeLayout android:layout_width="wrap_content"
                            android:id="@+id/container"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                >


                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="center"
                    >

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/ic_appbanner1"
                        />


                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/txt_loginscreen_apptitle2"
                              android:textSize="18sp"
                              android:textColor="#FFFFFF"
                              android:text="Santeh"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/txt_loginscreen_apptitle1"
                              android:textSize="30sp"
                              android:textColor="#FFFFFF"
                        android:text="CRM"/>



                    <LinearLayout android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/credHolder"
                                  android:orientation="vertical"
                                  android:paddingTop="15dp"
                                  android:paddingLeft="50dp"
                                  android:paddingRight="50dp"
                                  android:gravity="center"
                                  android:background="#039be5">

                        <TextView android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:textColor="#f0efe2"
                                  android:textSize="13sp"
                                  android:paddingLeft="5dp"
                                  android:id="@+id/lbl_login_username"
                                  android:visibility="gone"
                                  android:text="Username:"
                                    />

                        <EditText android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:textCursorDrawable="@null"
                                  android:textSize="16sp"
                                  android:textColorHint="#d2e6e0"
                                  android:inputType="textVisiblePassword"
                                  android:id="@+id/txt_loginscreen_username"
                                  android:text=""
                                  android:textColor="#fff187"
                                  android:hint="Username..."/>

                        <TextView android:layout_width="fill_parent"
                                  android:visibility="gone"
                                  android:layout_height="wrap_content"
                                  android:textColor="#f0efe2"
                                  android:paddingTop="10dp"
                                  android:textSize="13sp"
                                  android:paddingLeft="5dp"
                                  android:id="@+id/lbl_login_password"
                                  android:text="Password:"
                            />

                        <EditText android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:textCursorDrawable="@null"
                                  android:textSize="16sp"
                                  android:textColorHint="#d2e6e0"
                                  android:inputType="textPassword"
                                  android:id="@+id/txt_loginscreen_password"
                                  android:text=""
                                  android:textColor="#fff187"
                                  android:hint="Password..."/>

                    </LinearLayout>

                </LinearLayout>




            </RelativeLayout>



            <View android:layout_width="match_parent"
                  android:id="@+id/bottompaddint"
                  android:layout_height="69dp"
                  android:layout_marginLeft="50dp"
                  android:layout_marginRight="50dp"
                  android:layout_below="@+id/container"/>

            <!--<View android:layout_width="match_parent"-->
                  <!--android:layout_height="1dp"-->
                  <!--android:layout_marginLeft="53dp"-->
                  <!--android:background="@color/yellow"-->
                  <!--android:layout_marginRight="53dp"-->
                  <!--android:layout_below="@id/bottompaddint"/>-->

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignLeft="@+id/container"
                          android:layout_marginLeft="53dp"
                          android:layout_marginTop="4dp"
                          android:layout_below="@+id/container"
                >

                <CheckBox android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/chk_loginscreen_showpassword"
                          android:button="@drawable/bg_material_checkbox_yellow"
                          />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="13sp"
                          android:id="@+id/txt_loginscreen_showpassword"
                          android:textColor="#f0efe2"
                          android:paddingLeft="5dp"
                          android:layout_toRightOf="@+id/chk_loginscreen_showpassword"
                          android:layout_toEndOf="@+id/chk_loginscreen_showpassword"
                          android:text="Show password"
                    />




            </LinearLayout>




            <ImageButton android:layout_width="55dp"
                         android:layout_height="55dp"
                         android:src="@drawable/ic_check_black_24dp"
                         android:layout_marginRight="50dp"
                         android:background="@drawable/bg_yellow_oval"
                         android:layout_gravity="right"
                         android:layout_below="@+id/container"
                         android:layout_alignRight="@+id/container"
                         android:layout_alignEnd="@+id/container"
                         android:id="@+id/btn_login"/>




        </RelativeLayout>

        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:text="sample"
                  android:id="@+id/txttester"
                  android:gravity="center"
                  android:textSize="12sp"
                  android:textColor="#FFFFFF"
            />

        <LinearLayout android:layout_width="fill_parent"
                      android:id="@+id/bottomContainer"
                      android:layout_height="wrap_content"
                      android:gravity="center"
            android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                      android:background="@drawable/bg_material_transparent"
                      android:id="@+id/txtforgot_password"
                      android:textColor="#ffffff"
                      android:textSize="12sp"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:padding="10dp"
                             android:layout_height="wrap_content"
                             android:text="Forgot your password?"
            />

            <View android:layout_width="1dp" android:layout_height="16dp"
                  android:background="#FFFFFF"
                />

            <TextView android:layout_width="wrap_content"
                      android:background="@drawable/bg_material_transparent"
                      android:padding="10dp"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:textSize="12sp"
                      android:id="@+id/txt_requestaccount"
                      android:textColor="#ffffff"
                      android:layout_height="wrap_content"
                      android:text="Request an account"
                />

        </LinearLayout>

    </LinearLayout>


    





</FrameLayout>