<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView android:layout_width="60dp"
              android:layout_height="60dp"
              android:gravity="center"
              android:textSize="23sp"
              android:padding="7dp"
              android:textColor="#FFFFFF"
              android:background="@drawable/bg_darktteal_oval_"
              android:layout_gravity="center"
              android:id="@+id/item_user_initials"
        android:text="JD"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
        android:orientation="vertical"
                  android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            android:textSize="15dp"
            android:textColor="@color/background_floating_material_dark"
            android:text="Juan Dela Cruz"
            android:id="@+id/item_user_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Area Manager"
            android:textSize="13dp"
            android:id="@+id/item_user_position"
            android:textColor="@color/gray_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Pampanga, Bulacan, Bataan"
            android:textSize="12dp"
            android:id="@+id/item_user_areaAssigned"
            android:textColor="@color/gray_400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>