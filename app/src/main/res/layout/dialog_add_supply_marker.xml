<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="15dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:text="ADD MARKER DETAILS"
                android:textSize="19sp"
                android:textColor="@color/material_blue_grey_950"
                android:labelFor="@+id/txt_addmarker_contactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#328d90"/>

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                >
                <TextView
                    android:text="Company/Org/Contact"
                    android:labelFor="@+id/txt_addmarker_contactName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:padding="5dp"
                    android:id="@+id/txt_addmarker_contactName"
                    android:background="#00000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    />
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_marginRight="5dp"-->
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#80328d90"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:text="Product"
                    android:labelFor="@+id/txt_addmarker_prod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:padding="5dp"
                    android:id="@+id/txt_addmarker_prod"
                    android:background="#00000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#80328d90"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:text="Qty of Supplies"
                    android:labelFor="@+id/txt_addmarker_QTY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:padding="5dp"
                    android:id="@+id/txt_addmarker_QTY"
                    android:background="#00000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#80328d90"/>
            </LinearLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:text="Pickup Date"
                    android:labelFor="@+id/txt_addmarker_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <DatePicker
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:id="@+id/datePicker1"
                    >

                </DatePicker>
                <!--<EditText-->
                    <!--android:padding="5dp"-->
                    <!--android:id="@+id/txt_addmarker_date"-->
                    <!--android:background="#00000000"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:inputType="date"-->
                    <!--/>-->
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#80328d90"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:text="Specie"
                    android:labelFor="@+id/txt_addmarker_Specie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:padding="5dp"
                    android:id="@+id/txt_addmarker_Specie"
                    android:background="#00000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#80328d90"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:text="Address"
                    android:labelFor="@+id/txt_addmarker_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:padding="5dp"
                    android:lines="2"
                    android:id="@+id/txt_addmarker_address"
                    android:background="#00000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#80328d90"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_gravity="right">

                <Button
                    android:textColor="@color/material_deep_teal_500"
                    android:textSize="13sp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_material_transparent"
                    android:text="OK"
                    android:id="@+id/btn_dialog_addmarker_OK"/>
                <Button
                    android:textColor="@color/material_deep_teal_500"
                    android:textSize="13sp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_material_transparent"
                    android:text="CANCEL"
                    android:id="@+id/btn_dialog_addmarker_CANCEL"/>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>