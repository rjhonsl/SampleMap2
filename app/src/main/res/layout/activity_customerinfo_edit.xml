<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@color/accent_material_light">

        <TextView
            android:paddingRight="3dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="0dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="  CUSTOMER INFORMATION"
            android:textSize="15sp"
            android:layout_marginRight="5dp"
            android:id="@+id/txt_customerInfo_edit_title"
            android:drawableLeft="@drawable/ic_keyboard_arrow_left_white_24dp"
            android:textColor="@color/background_material_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton

            android:src="@drawable/ic_save_white_24dp"
            android:padding="10dp"
            android:background="@drawable/bg_material_transparent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal"
            android:textColor="@color/background_material_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:text="Contact Name"
            android:labelFor="@+id/txt_markerdetails_contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:text="Juan Dela Cruz"
            android:padding="5dp"
            android:id="@+id/txt_custE_contactName"
            android:background="#00000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            />
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_marginRight="5dp"-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#80328d90"/>
    </LinearLayout>


</LinearLayout>