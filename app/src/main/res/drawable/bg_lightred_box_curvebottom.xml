<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- if pressed -->
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="#e94a4a"
                />
            <gradient
                android:startColor="#e94a4a"
                android:endColor="#e94a4a"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
    <item android:state_enabled="false"> <!-- if pressed -->
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="#d4d4d4"
                />
            <gradient
                android:startColor="#ececec"
                android:endColor="#ececec"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="#dbd9d1"
                />
            <gradient
                android:startColor="#e94a4a"
                android:endColor="#e94a4a"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
</selector>