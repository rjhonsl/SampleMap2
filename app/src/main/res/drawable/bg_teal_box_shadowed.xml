<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- if pressed -->
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#dbd9d1"
                />
            <corners
                android:radius="2dp"
                />
            <gradient
                android:startColor="#d7d6d3"
                android:endColor="#d7d6d3"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="4dp"
                />
            <stroke
                android:width="1dp"
                android:color="#dbd9d1"
                />
            <gradient
                android:startColor="@color/material_deep_teal_500"
                android:endColor="@color/material_deep_teal_500"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
</selector>