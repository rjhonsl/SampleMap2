<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- if pressed -->
        <shape android:shape="oval"
               android:thicknessRatio="12"
            android:thickness="12dp">
            <gradient
                android:startColor="#3b47474d"
                android:endColor="#3b47474d"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#00ffffff"
                android:endColor="#00000000"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
</selector>