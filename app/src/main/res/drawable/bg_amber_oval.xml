<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- if pressed -->
        <shape android:shape="oval">
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="#5abcd0"
                />
            <gradient
                android:startColor="#5abcd0"
                android:endColor="#5abcd0"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
    <item android:state_enabled="false"> <!-- if pressed -->
        <shape android:shape="oval">
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="#d4d4d4"
                />
            <gradient
                android:startColor="#ececec"
                android:endColor="#ececec"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"/>
            <stroke

                android:width="1dp"
                android:color="@color/amber_400"
                />
            <gradient
                android:startColor="@color/amber_400"
                android:endColor="@color/amber_400"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
</selector>